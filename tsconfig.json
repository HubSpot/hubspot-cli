{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist",
    "noErrorTruncation": true
  },
  "include": ["bin", "commands", "lib", "lang"],
  "exclude": ["**/__tests__/*"]
}
